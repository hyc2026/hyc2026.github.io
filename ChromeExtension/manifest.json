{
    "name": "FullScreen",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Make pdf display full screen",
    "browser_action": {
        "default_icon": "img/icon.png"
    },

    "background": {
      "persistent": false,
      "scripts": ["js/bgscript.js"]
    },

    "permissions": [
      "tabs"
    ]
}